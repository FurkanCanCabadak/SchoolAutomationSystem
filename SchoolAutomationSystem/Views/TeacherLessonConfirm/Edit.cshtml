@model SchoolAutomationSystem.Models.EntityModel.StudentLessonSelectionLesson

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Confirm Lesson</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/TeacherLessonConfirm/Index">Confirm Lesson</a></li>
                            <li class="breadcrumb-item active">Confirm Lesson</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Confirm Lesson</h4>
                        <b class="text-warning">@TempData["Message"]</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post">

                                <div class="row gy-4">
                                    @foreach (var item in Model.SelectionLessonList)
                                    {

                                        <div class="col-md-12">
                                            <div>
                                                <label for="basiInput" class="form-label">Lesson Name</label>
                                                <input type="text" class="form-control" name="LessonName" id="LessonName" value="@Model.LessonList.FirstOrDefault(x=>x.Id==item.LessonId).Name" readonly>
                                            </div>
                                        </div>
                                        <input type="hidden" name="StudentId" id="StudentId" value="@item.StudentId">
                                        <input type="hidden" name="LessonId" id="LessonId" value="@item.LessonId">
                                        <div class="col-md-12">
                                            <button class="btn btn-success float-end" type="submit">Confirm </button>
                                        </div>
                                    }
                                </div>
                            </form>
                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
