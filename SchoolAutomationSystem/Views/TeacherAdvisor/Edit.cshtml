@model SchoolAutomationSystem.Models.EntityModel.TeacherStudent

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Student Advisor</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/TeacherAdvisor/Index">Advisor</a></li>
                            <li class="breadcrumb-item active">Advisor</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Advisor</h4>
                        <b class="text-warning">@TempData["Message"]</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post">

                                <div class="col-md-12">
                                    <div class="col-md-12">
                                        <label for="customername-field" class="form-label">Advisor Name</label>
                                        <input type="text" id="AdvisorName" name="AdvisorName" class="form-control" value="@Model.SingleTeacher.Name" readonly />
                                    </div>
                                    <input type="hidden" id="AdvisorId" name="AdvisorId" value="@Model.SingleTeacher.Id">
                                </div>
                                <div class="col-md-12">
                                    <button class="btn btn-success float-end" type="submit">Update Advisor</button>
                                </div>
                            </form>
                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->



