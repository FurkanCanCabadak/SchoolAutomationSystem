@model SchoolAutomationSystem.Models.Student

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StudentsLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Edit Information</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/StudentInfo/Index">My Information</a></li>
                            <li class="breadcrumb-item active">Edit Information</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">My Information </h4>
                        <b class="text-warning">@TempData["Message"]</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">

                            <div class="row gy-4">
                                <div class="col-md-12">
                                    <div>
                                        <label for="basiInput" class="form-label">Name</label>
                                        <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" readonly>
                                    </div>
                                </div>
                                <input type="hidden" name="Id" id="Id" value="@Model.Id">
                                <div class="col-md-12">
                                    <div>
                                        <label for="basiInput" class="form-label">Surname</label>
                                        <input type="text" class="form-control" name="Surname" id="Surname" value="@Model.Surname" readonly>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div>
                                        <label for="basiInput" class="form-label">TC Number</label>
                                        <input type="text" class="form-control" name="TCNumber" id="TCNumber" value="@Model.TCNumber" readonly>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div>
                                        <label for="basiInput" class="form-label">Email</label>
                                        <input type="email" class="form-control" name="Email" id="Email" value="@Model.Email" readonly>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div>
                                        <label for="basiInput" class="form-label">Phone</label>
                                        <input type="tel" class="form-control" name="Phone" id="Phone" value="@Model.Phone" readonly>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div>
                                        <label for="basiInput" class="form-label">Term</label>
                                        <input type="number" class="form-control" name="Term" id="Term" value="@Model.Term" readonly>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    @{
                                        string[,] status = { { "Payed", "Not Payed" }, { "success", "danger" } };
                                    }
                                    <span class="btn btn-sm btn-soft-@(Model.IsPayment == true ? status[1, 0] : status[1,1]) text-uppercase">
                                        @(Model.IsPayment == true ? status[0, 0] : status[0,1])
                                    </span>
                                </div>
                                <div class="col-md-12">
                                    <a class="btn btn-sm btn-success edit-item-btn" href="~/StudentPayment/Edit/@Model.Id">Edit</a>
                                </div>
                            </div>
                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
