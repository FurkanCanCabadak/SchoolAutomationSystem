@model SchoolAutomationSystem.Models.EntityModel.StudentDepartment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_StudentAffairLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Edit Student</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/StudentAffairStudent/Index">Student List</a></li>
                            <li class="breadcrumb-item active">Edit Student</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Edit Student </h4>
                        <b class="text-warning">@TempData["Message"]</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post">
                                <div class="modal-body">



                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">TC Number</label>
                                            <input type="text" class="form-control" name="TCNumber" id="TCNumber" value="@Model.SingleStudent.TCNumber">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Name</label>
                                            <input type="text" class="form-control" name="Name" id="Name" value="@Model.SingleStudent.Name">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Surname</label>
                                            <input type="text" class="form-control" name="Surname" id="Surname" value="@Model.SingleStudent.Surname">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Email</label>
                                            <input type="email" class="form-control" name="Email" id="Email" value="@Model.SingleStudent.Email">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Phone</label>
                                            <input type="tel" class="form-control" name="Phone" id="Phone" value="@Model.SingleStudent.Phone">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">User Name</label>
                                            <input type="text" class="form-control" name="UserName" id="UserName" value="@Model.SingleStudent.UserName">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Password</label>
                                            <input type="text" class="form-control" name="Password" id="Password" value="@Model.SingleStudent.Password">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Total Credit</label>
                                            <input type="number" class="form-control" name="TotalCredit" id="TotalCredit" value="@Model.SingleStudent.TotalCredit">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Term</label>
                                            <input type="number" class="form-control" name="Term" id="Term" value="@Model.SingleStudent.Term">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label for="basiInput" class="form-label">Department</label>
                                            <select name="DepartmentId" id="DepartmentId" class="form-control">
                                                <option>@Model.DepartmentList.FirstOrDefault(x => x.Id == Model.SingleStudent.DepartmentId).Name</option>
                                                <optgroup>
                                                    @foreach (var department in Model.DepartmentList.ToList())
                                                    {
                                                        <option value="@department.Id">
                                                            @department.Name
                                                        </option>
                                                    }
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>


                                    <div>
                                        <label for="status-field" class="form-label">Status</label>
                                        <div class="form-check form-switch form-switch-secondary">
                                            <input class="form-check-input" type="checkbox" role="switch" name="IsStatus" id="IsStatus" data-val="true" value="true" checked>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class="hstack gap-2 justify-content-end">
                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-success" id="add-btn">Edit Student</button>
                                    </div>
                                </div>
                            </form>

                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
