@model SchoolAutomationSystem.Models.EntityModel.DepartmentFaculty

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Edit Department</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/AdminDepartment/Index">Department List</a></li>
                            <li class="breadcrumb-item active">Edit Department</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Edit Department - @Model.SingleDepartment.Name </h4>
                        <b class="text-warning">@ViewBag.Message</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post">
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Name</label>
                                            <input type="text" class="form-control" name="Name" id="Name" value="@Model.SingleDepartment.Name">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="customername-field" class="form-label">Department Min Gradueate Credit</label>
                                        <input type="number" id="MinGraduateCredit" name="MinGraduateCredit" class="form-control"  value="@Model.SingleDepartment.MinGraduateCredit"required />
                                    </div>
                                    <div class="col-md-12">
                                        <label for="customername-field" class="form-label">Department Pay</label>
                                        <input type="number" id="Pay" name="Pay" class="form-control" value="@Model.SingleDepartment.Pay" required />
                                    </div>
                                    <div class="col-md-12">
                                            <label for="basiInput" class="form-label">Faculty</label>
                                            <select name="FacultyId" id="FacultyId" class="form-control">
                                                <option value="@Model.SingleFaculty.Id">@Model.SingleFaculty.Name</option>
                                                <optgroup>
                                                    @foreach (var faculty in Model.FacultyList.ToList())
                                                    {
                                                        <option value="@faculty.Id">
                                                            @faculty.Name
                                                        </option>
                                                    }
                                                </optgroup>
                                            </select>
                                    </div>
                                    <div>
                                        <label for="status-field" class="form-label">Status</label>
                                        <div class="form-check form-switch form-switch-secondary">
                                            <input class="form-check-input" type="checkbox" role="switch" name="IsStatus" id="IsStatus" data-val="true" value="true" checked="@Model.SingleDepartment.IsStatus">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <button class="btn btn-success float-end" type="submit">Edit Department</button>
                                    </div>
                            </form>
                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
