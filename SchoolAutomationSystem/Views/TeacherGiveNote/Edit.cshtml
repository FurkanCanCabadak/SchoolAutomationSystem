@model SchoolAutomationSystem.Models.SelectionLesson

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Student Note</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/TeacherGiveNote/Index">Give Note</a></li>
                            <li class="breadcrumb-item active">Give Note</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Give Note</h4>
                        <b class="text-warning">@TempData["Message"]</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post">

                                <div class="col-md-12">

                                    <div class="col-md-12">
                                        <label for="customername-field" class="form-label">Visa Note</label>
                                        <input type="number" id="VisaNote" name="VisaNote" class="form-control" value="@Model.VisaNote" />
                                    </div>
                                    <div class="col-md-12">
                                        <label for="customername-field" class="form-label">Final Note</label>
                                        <input type="number" id="FinalNote" name="FinalNote" class="form-control" value="@Model.FinalNote" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button class="btn btn-success float-end" type="submit">Edit Note</button>
                                </div>
                            </form>
                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->


