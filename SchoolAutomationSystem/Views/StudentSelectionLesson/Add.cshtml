@model SchoolAutomationSystem.Models.Lesson

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_StudentsLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Choose Lesson</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="~/StudentInfo/Index">Choose Lesson</a></li>
                            <li class="breadcrumb-item active">Choose Lesson</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Choose Lesson</h4>
                        <b class="text-warning">@TempData["Message"]</b>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post">

                                <div class="row gy-4">
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Name</label>
                                            <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" readonly>
                                        </div>
                                    </div>
                                    <input type="hidden" name="Id" id="Id" value="@Model.Id">
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Credit</label>
                                            <input type="text" class="form-control" name="Credit" id="Credit" value="@Model.Credit" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            <label for="basiInput" class="form-label">Selectional Term</label>
                                            <input type="text" class="form-control" name="SelectionalTerm" id="SelectionalTerm" value="@Model.SelectionalTerm" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <button class="btn btn-success float-end" type="submit">Choose </button>
                                    </div>
                                </div>
                            </form>
                            <!--end row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
